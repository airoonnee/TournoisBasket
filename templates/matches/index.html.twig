{% extends 'base.html.twig' %}

{% block title %}Hello MatchesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Matchs du Tournoi: {{ tournament.name }}</h1>

    <ul>
        {% for match in matches %}
            <li>
                Match entre {{ match.getTeam1Id().getName() }} et {{ match.getTeam2Id().getName() }} le {{ match.getMatchDate|date('Y-m-d') }}
            </li>
        {% else %}
            <li>Aucun match trouv√© pour ce tournoi.</li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_display') }}" class="btn btn-secondary">Retour aux tournois</a>
</div>
{% endblock %}
