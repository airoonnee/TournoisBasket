{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<style>
    .profile-container {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
    .profile-container h1 {
        text-align: center;
    }
    .profile-details {
        background: #f5f5f5;
        padding: 20px;
        border-radius: 8px;
    }
</style>

<div class="profile-container">
    <h1>Profil de {{ app.user.firstName }} {{ app.user.lastName }}</h1>
    <div class="profile-details">
        <p><strong>Email :</strong> {{ app.user.email }}</p>
        <p><strong>Date de naissance :</strong> {{ app.user.birthDate ? app.user.birthDate|date('d/m/Y') : 'Non renseigné' }}</p>
        <p><strong>Poste :</strong> {{ app.user.position ? app.user.position : 'Non renseigné' }}</p>
        <p><strong>Rôles :</strong> {{ app.user.roles|join(', ') }}</p>
    </div>
</div>
{% endblock %}
